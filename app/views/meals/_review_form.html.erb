<%= turbo_frame_tag "review_form" do %>
  <% user_has_reviewed = current_user && meal.meal_reviews.exists?(user: current_user) %>
  <% unless user_has_reviewed %>
    <h3>Add your review</h3>
    <%= form_with model: [meal, review], 
                  url: meal_reviews_path(meal.external_id),
                  local: false,
                  data: { turbo: true },
                  class: "space-y-4 pb-16" do |form| %>
      <div>
        <%= form.label :rating, "Rating" %>
        <%= form.select :rating, 
                          options_for_select((1..5).map { |i| [i, i] }, review.rating),
                          { prompt: "Select rating" },
                          { class: "mt-1 block w-36 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" } %>
        <% if review.errors[:rating].any? %>
          <p class="mt-1 text-sm text-red-600"><%= review.errors[:rating].first %></p>
        <% end %>
      </div>
      <div>
        <%= form.label :comment, "Add your comment" %>
        <div class="mt-2">
          <%= form.text_area :comment, 
                              rows: 4,
                              class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6",
                              placeholder: "Share your thoughts about this meal..." %>
          <% if review.errors[:comment].any? %>
            <p class="mt-1 text-sm text-red-600"><%= review.errors[:comment].first %></p>
          <% end %>
        </div>
      </div>
      <div>
        <%= form.submit "Submit Review",
                         class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer",
                         data: { disable_with: "Submitting..." } %>
      </div>
    <% end %>
  <% else %>
    <div class="bg-blue-50 border border-blue-200 rounded-md p-4">
      <p class="text-sm text-blue-800">
        <svg class="w-4 h-4 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
        </svg>
        You have already reviewed this meal. You can delete your existing review to add a new one.
      </p>
    </div>
  <% end %>
<% end %>
