<%= link_to meal_path(meal_card.external_id), class: "group" do %>
  <% if meal_card.thumbnail_image_url.present? %>
    <%= image_tag meal_card.thumbnail_image_url, class: "aspect-square w-full rounded-lg bg-gray-200 object-cover group-hover:opacity-75" %>
  <% end %>
  <h4 class="mt-4 !mb-0"><%= meal_card.category_name %></h4>
  <h3><%= meal_card.name %></h3>
<% end %>
