<div class="flex flex-col items-center justify-center py-12">
  <%= link_to meals_path, class: "relative block w-full rounded-lg border-2 border-dashed border-gray-300 p-12 text-center hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" do %>
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true" class="mx-auto size-12 text-gray-400">
      <path d="M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z" stroke-width="2" vector-effect="non-scaling-stroke" stroke-linecap="round" stroke-linejoin="round" />
    </svg>
    <h3 class="mt-2 block text-sm font-semibold text-gray-900"><%= title %></h3>
    <p class="mt-1 text-sm text-gray-500"><%= description %></p>
  <% end %>
  <div class="mt-6">
    <%= render ButtonComponent.new(theme: :primary, action: random_meals_path, method: :get) do %>
      or check a random meal
    <% end %>
  </div>
</div>
