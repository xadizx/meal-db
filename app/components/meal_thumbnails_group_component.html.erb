<% if @meal_thumbnails.present? %>
  <div class="grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:gap-x-8">
    <% @meal_thumbnails.each do |thumbnail| %>
      <%= render(MealThumbnailComponent.new(meal_thumbnail: thumbnail)) %>
    <% end %>
  </div>
<% else %>
  <div class="flex flex-col items-center justify-center py-12">
    <%= link_to browse_meals_path, class: "relative block w-full rounded-lg border-2 border-dashed border-gray-300 p-12 text-center hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" do %>
      <svg viewBox="0 0 48 48" fill="none" stroke="currentColor" aria-hidden="true" class="mx-auto size-12 text-gray-400">
        <path d="M8 14v20c0 4.418 7.163 8 16 8 1.381 0 2.721-.087 4-.252M8 14c0 4.418 7.163 8 16 8s16-3.582 16-8M8 14c0-4.418 7.163-8 16-8s16 3.582 16 8m0 0v14m0-4c0 4.418-7.163 8-16 8S8 28.418 8 24m32 10v6m0 0v6m0-6h6m-6 0h-6" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
      </svg>
      <span class="mt-2 block text-sm font-semibold text-gray-900">No favourite meals yet. Start browsing to add some!</span>
    <% end %>
    <%= link_to "Or check a random meal", random_meals_path, class: "mt-4 text-indigo-600 hover:underline font-medium" %>
  </div>
<% end %>
