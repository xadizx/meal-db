<div class="flex flex-col items-center justify-center py-12">
  <%= link_to primary_action_path, class: "relative block w-full rounded-lg border-2 border-dashed border-gray-300 p-12 text-center hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" do %>
    <%= icon_svg.html_safe %>
    <span class="mt-2 block text-sm font-semibold text-gray-900"><%= title %></span>
  <% end %>
  <% if secondary_action_text && secondary_action_path %>
    <%= link_to secondary_action_text, secondary_action_path, class: "mt-4 text-indigo-600 hover:underline font-medium" %>
  <% end %>
</div>
